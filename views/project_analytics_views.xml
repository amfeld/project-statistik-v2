<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Custom list view for projects in account module -->
    <record id="view_project_list_account_analytics" model="ir.ui.view">
        <field name="name">project.project.list.account.analytics</field>
        <field name="model">project.project</field>
        <field name="arch" type="xml">
            <list string="Projektstatistik" create="false" edit="false" delete="false">
                <header>
                    <button name="action_refresh_financial_data" type="object" string="Finanzdaten aktualisieren" class="btn-primary"/>
                </header>

                <!-- Basic Information -->
                <field name="client_name"/>
                <field name="name"/>
                <field name="head_of_project"/>

                <!-- Data Availability Status -->
                <field name="data_availability_status" widget="badge"
                       decoration-success="data_availability_status == 'available'"
                       decoration-danger="data_availability_status == 'no_analytic_account'"
                       optional="show"/>

                <!-- Customer Invoice Fields - NET (primary) -->
                <field name="customer_invoiced_amount_net" sum="Gesamt in Rechnung gestellt (Netto)" optional="show"
                       widget="monetary" decoration-bf="1"/>
                <field name="customer_paid_amount_net" sum="Gesamt bezahlt (Netto)" optional="show"
                       widget="monetary"/>
                <field name="customer_outstanding_amount_net" sum="Gesamt ausstehend (Netto)" optional="show"
                       widget="monetary" decoration-danger="customer_outstanding_amount_net != 0"/>

                <!-- Customer Invoice Fields - GROSS (dunkelgrau) -->
                <field name="customer_invoiced_amount_gross" sum="Gesamt in Rechnung gestellt (Brutto)" optional="hide"
                       widget="monetary" decoration-muted="1"/>
                <field name="customer_paid_amount_gross" sum="Gesamt bezahlt (Brutto)" optional="hide"
                       widget="monetary" decoration-muted="1"/>
                <field name="customer_outstanding_amount_gross" sum="Gesamt ausstehend (Brutto)" optional="hide"
                       widget="monetary" decoration-muted="1"/>

                <!-- Skonto -->
                <field name="customer_skonto_taken" sum="Gesamt gewährte Skonti" optional="hide"
                       widget="monetary"/>

                <!-- Vendor Bills - NET (primary) -->
                <field name="vendor_bills_total_net" sum="Gesamt Lieferantenrechnungen (Netto)" optional="show"
                       widget="monetary" decoration-bf="1"/>

                <!-- Vendor Bills - GROSS (dunkelgrau) -->
                <field name="vendor_bills_total_gross" sum="Gesamt Lieferantenrechnungen (Brutto)" optional="hide"
                       widget="monetary" decoration-muted="1"/>

                <field name="vendor_skonto_received" sum="Gesamt erhaltene Skonti" optional="hide"
                       widget="monetary"/>

                <!-- Labor -->
                <field name="total_hours_booked" sum="Gesamt Stunden" optional="show"
                       widget="float_time"/>
                <field name="labor_costs" sum="Gesamtpersonalkosten" optional="show"
                       widget="monetary"/>

                <!-- Other Costs -->
                <field name="other_costs_net" sum="Sonstige Kosten (Netto)" optional="hide"
                       widget="monetary"/>

                <!-- Total Cost Fields - NET -->
                <field name="total_costs_net" sum="Gesamtkosten Netto" optional="show"
                       widget="monetary" decoration-bf="1"/>

                <!-- Profitability - NET -->
                <field name="profit_loss_net" sum="Gesamt Gewinn/Verlust (Netto)" optional="show"
                       widget="monetary" decoration-bf="1"
                       decoration-success="profit_loss_net &gt; 0"
                       decoration-danger="profit_loss_net &lt; 0"/>
                <field name="negative_difference_net" sum="Gesamtverluste (Netto)" optional="hide"
                       widget="monetary"/>

                <!-- Legacy/Deprecated fields (hidden by default) -->
                <field name="customer_invoiced_amount" sum="[VERALTET] In Rechnung gestellt" optional="hide"
                       widget="monetary" decoration-muted="1"/>
                <field name="customer_paid_amount" sum="[VERALTET] Bezahlt" optional="hide"
                       widget="monetary" decoration-muted="1"/>
                <field name="customer_outstanding_amount" sum="[VERALTET] Ausstehend" optional="hide"
                       widget="monetary" decoration-muted="1"/>
                <field name="vendor_bills_total" sum="[VERALTET] Lieferantenrechnungen" optional="hide"
                       widget="monetary" decoration-muted="1"/>
                <field name="total_costs_with_tax" sum="[VERALTET] Gesamtkosten" optional="hide"
                       widget="monetary" decoration-muted="1"/>
                <field name="profit_loss" sum="[VERALTET] Gewinn/Verlust" optional="hide"
                       widget="monetary" decoration-muted="1"/>
                <field name="negative_difference" sum="[VERALTET] Verluste" optional="hide"
                       widget="monetary" decoration-muted="1"/>
            </list>
        </field>
    </record>

    <record id="view_project_pivot_account_analytics" model="ir.ui.view">
        <field name="name">project.project.pivot.account.analytics</field>
        <field name="model">project.project</field>
        <field name="arch" type="xml">
            <pivot string="Projektstatistik Pivot">
                <!-- Customer Invoice Measures - NET (primary) -->
                <field name="customer_invoiced_amount_net" type="measure"/>
                <field name="customer_paid_amount_net" type="measure"/>
                <field name="customer_outstanding_amount_net" type="measure"/>

                <!-- Customer Invoice Measures - GROSS -->
                <field name="customer_invoiced_amount_gross" type="measure"/>
                <field name="customer_paid_amount_gross" type="measure"/>
                <field name="customer_outstanding_amount_gross" type="measure"/>

                <field name="customer_skonto_taken" type="measure"/>

                <!-- Vendor Bill Measures - NET (primary) -->
                <field name="vendor_bills_total_net" type="measure"/>

                <!-- Vendor Bill Measures - GROSS -->
                <field name="vendor_bills_total_gross" type="measure"/>

                <field name="vendor_skonto_received" type="measure"/>

                <!-- Labor Measures -->
                <field name="total_hours_booked" type="measure"/>
                <field name="labor_costs" type="measure"/>

                <!-- Other Costs -->
                <field name="other_costs_net" type="measure"/>

                <!-- Cost Measures - NET -->
                <field name="total_costs_net" type="measure"/>

                <!-- Profitability Measures - NET -->
                <field name="profit_loss_net" type="measure"/>
                <field name="negative_difference_net" type="measure"/>

                <!-- Legacy measures (kept for compatibility) -->
                <field name="customer_invoiced_amount" type="measure"/>
                <field name="customer_paid_amount" type="measure"/>
                <field name="customer_outstanding_amount" type="measure"/>
                <field name="vendor_bills_total" type="measure"/>
                <field name="profit_loss" type="measure"/>
                <field name="negative_difference" type="measure"/>

                <!-- Dimension fields - available for grouping -->
                <field name="name" type="row"/>
                <field name="client_name"/>
                <field name="stage_id"/>
                <field name="user_id"/>
                <field name="partner_id"/>
                <field name="company_id"/>
                <field name="create_date" interval="month"/>
                <field name="date_start" interval="month"/>
            </pivot>
        </field>
    </record>

    <!-- Graph view for visual analytics -->
    <record id="view_project_graph_account_analytics" model="ir.ui.view">
        <field name="name">project.project.graph.account.analytics</field>
        <field name="model">project.project</field>
        <field name="arch" type="xml">
            <graph string="Projektstatistik Diagramm" type="bar" sample="1">
                <field name="name"/>
                <field name="customer_invoiced_amount_net" type="measure"/>
                <field name="vendor_bills_total_net" type="measure"/>
                <field name="total_costs_net" type="measure"/>
                <field name="profit_loss_net" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Form view for drill-down details -->
    <record id="view_project_form_account_analytics" model="ir.ui.view">
        <field name="name">project.project.form.account.analytics</field>
        <field name="model">project.project</field>
        <field name="arch" type="xml">
            <form string="Projektdetails" create="false" edit="false" delete="false">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_account_analytic_line"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-pencil-square-o"
                                string="Analytische Buchungen"
                                help="Zeigt alle Buchungszeilen die diesem Projekt zugeordnet sind"/>
                        <button name="action_open_standard_project_form"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-tasks"
                                string="Projektdetails"
                                help="Öffnet die Standard-Projektansicht"/>
                        <button name="action_refresh_financial_data"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-refresh"
                                string="Daten aktualisieren"
                                help="Berechnet alle Finanzdaten neu"/>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <!-- Data Availability Warning -->
                    <div class="alert alert-danger" role="alert" invisible="data_availability_status == 'available'">
                        <strong>⚠️ Keine Finanzdaten verfügbar</strong><br/>
                        Diesem Projekt ist kein analytisches Konto zugeordnet. Alle Finanzfelder zeigen 0,00 €.<br/><br/>
                        <strong>Um Finanzdaten zu aktivieren:</strong>
                        <ol>
                            <li>Aktivieren Sie "Analytische Buchhaltung" in den Buchhaltungseinstellungen</li>
                            <li>Weisen Sie diesem Projekt ein analytisches Konto zu (Plan: Projekte)</li>
                            <li>Stellen Sie sicher, dass Rechnungszeilen "Analytische Verteilung" gesetzt haben</li>
                        </ol>
                    </div>
                    <field name="data_availability_status" invisible="1"/>
                    <field name="has_analytic_account" invisible="1"/>

                    <group>
                        <group name="project_info" string="Projektinformationen">
                            <field name="client_name"/>
                            <field name="head_of_project"/>
                            <field name="partner_id"/>
                            <field name="user_id"/>
                            <field name="stage_id"/>
                        </group>
                        <group name="dates" string="Zeiträume">
                            <field name="date_start"/>
                            <field name="date"/>
                            <field name="create_date"/>
                        </group>
                    </group>

                    <!-- Summary section with NET/GROSS comparison -->
                    <group string="Finanzzusammenfassung">
                        <group string="NETTO-Beträge (Hauptansicht)">
                            <field name="data_availability_status" widget="badge"
                                   decoration-success="data_availability_status == 'available'"
                                   decoration-danger="data_availability_status == 'no_analytic_account'"/>
                            <field name="customer_invoiced_amount_net" widget="monetary"
                                   decoration-bf="1"/>
                            <field name="vendor_bills_total_net" widget="monetary"
                                   decoration-bf="1"/>
                            <field name="total_costs_net" widget="monetary"
                                   decoration-bf="1"/>
                            <field name="profit_loss_net" widget="monetary"
                                   decoration-success="profit_loss_net &gt; 0"
                                   decoration-danger="profit_loss_net &lt; 0"
                                   decoration-bf="1"/>
                        </group>
                        <group string="BRUTTO-Beträge (mit MwSt.)">
                            <field name="customer_invoiced_amount_gross" widget="monetary"
                                   decoration-muted="1"/>
                            <field name="vendor_bills_total_gross" widget="monetary"
                                   decoration-muted="1"/>
                            <label for="total_hours_booked" string="Arbeitsstunden"/>
                            <field name="total_hours_booked" widget="float_time" nolabel="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Kundenrechnungen" name="customer_invoices">
                            <group>
                                <group string="NETTO-Beträge (ohne MwSt.)">
                                    <field name="customer_invoiced_amount_net" widget="monetary"
                                           decoration-bf="1"/>
                                    <field name="customer_paid_amount_net" widget="monetary"/>
                                    <field name="customer_outstanding_amount_net" widget="monetary"
                                           decoration-danger="customer_outstanding_amount_net &gt; 0"/>
                                </group>
                                <group string="BRUTTO-Beträge (mit MwSt.)">
                                    <field name="customer_invoiced_amount_gross" widget="monetary"
                                           decoration-muted="1"/>
                                    <field name="customer_paid_amount_gross" widget="monetary"
                                           decoration-muted="1"/>
                                    <field name="customer_outstanding_amount_gross" widget="monetary"
                                           decoration-muted="1"
                                           decoration-danger="customer_outstanding_amount_gross &gt; 0"/>
                                </group>
                            </group>
                            <group>
                                <group string="Skonti &amp; Rabatte">
                                    <field name="customer_skonto_taken" widget="monetary"/>
                                </group>
                            </group>
                            <div class="alert alert-info" role="alert">
                                <strong>Hinweis:</strong> Die NETTO-Beträge sind die Hauptbeträge für die Gewinnberechnung.
                                BRUTTO-Beträge (dunkelgrau) zeigen die Gesamtbeträge inkl. MwSt. für Cashflow-Analysen.
                                Bezahlte Beträge werden proportional über alle Rechnungszeilen verteilt.
                            </div>
                        </page>

                        <page string="Lieferantenrechnungen" name="vendor_bills">
                            <group>
                                <group string="NETTO-Beträge (ohne MwSt.)">
                                    <field name="vendor_bills_total_net" widget="monetary"
                                           decoration-bf="1"/>
                                </group>
                                <group string="BRUTTO-Beträge (mit MwSt.)">
                                    <field name="vendor_bills_total_gross" widget="monetary"
                                           decoration-muted="1"/>
                                </group>
                            </group>
                            <group>
                                <group string="Skonti &amp; Rabatte">
                                    <field name="vendor_skonto_received" widget="monetary"/>
                                </group>
                            </group>
                            <div class="alert alert-info" role="alert">
                                <strong>Hinweis:</strong> Die NETTO-Beträge sind die Hauptbeträge für die Gewinnberechnung.
                                BRUTTO-Beträge (dunkelgrau) zeigen die Gesamtbeträge inkl. MwSt.
                                Erhaltene Skonti reduzieren die effektiven Kosten.
                            </div>
                        </page>

                        <page string="Kosten" name="costs">
                            <group>
                                <group string="Interne Kosten (NETTO)">
                                    <field name="labor_costs" widget="monetary"
                                           decoration-bf="1"/>
                                    <field name="other_costs_net" widget="monetary"/>
                                    <field name="total_costs_net" widget="monetary"
                                           decoration-bf="1"/>
                                </group>
                                <group string="Personalkosten">
                                    <field name="total_hours_booked" widget="float_time"/>
                                    <label for="labor_costs" string="Personalkosten"/>
                                    <div class="text-muted">
                                        <field name="labor_costs" widget="monetary" nolabel="1" readonly="1"/>
                                    </div>
                                </group>
                            </group>
                            <div class="alert alert-info" role="alert">
                                <strong>Kostenaufschlüsselung (NETTO):</strong>
                                <ul>
                                    <li><strong>Lieferantenrechnungen:</strong> Externe Kosten (siehe Tab "Lieferantenrechnungen")</li>
                                    <li><strong>Personalkosten:</strong> Zeiterfassung × Stundensatz (NETTO)</li>
                                    <li><strong>Sonstige Kosten:</strong> Andere interne Buchungen (NETTO)</li>
                                    <li><strong>Gesamtkosten Netto:</strong> Personalkosten + Sonstige Kosten (ohne Lieferantenrechnungen)</li>
                                </ul>
                                <p><em>Hinweis: Alle internen Kosten sind NETTO-Beträge (ohne MwSt.)</em></p>
                            </div>
                        </page>

                        <page string="Rentabilität" name="profitability">
                            <group>
                                <group string="Gewinn/Verlust (NETTO-Basis)">
                                    <field name="profit_loss_net" widget="monetary"
                                           decoration-success="profit_loss_net &gt; 0"
                                           decoration-danger="profit_loss_net &lt; 0"
                                           decoration-bf="1"/>
                                    <field name="negative_difference_net" widget="monetary"/>
                                </group>
                            </group>
                            <div class="alert alert-success" role="alert">
                                <strong>Berechnungsformel (NETTO-Basis):</strong><br/>
                                <code>
                                    Gewinn/Verlust (Netto) =
                                    (Kundenrechnungen Netto - Gewährte Skonti) -
                                    (Lieferantenrechnungen Netto - Erhaltene Skonti + Interne Kosten Netto)
                                </code>
                                <br/><br/>
                                <strong>Warum NETTO-Basis?</strong>
                                <ul>
                                    <li>✅ MwSt. ist ein Durchlaufposten (wir ziehen ein und zahlen ab)</li>
                                    <li>✅ NETTO-zu-NETTO Vergleich ist buchhalterisch korrekt</li>
                                    <li>✅ Zeigt die echte Projektrentabilität ohne Steuerverzerrung</li>
                                </ul>
                                <br/>
                                <strong>Interpretation:</strong>
                                <ul>
                                    <li><strong>Positiver Wert:</strong> Projekt macht Gewinn ✓</li>
                                    <li><strong>Negativer Wert:</strong> Projekt macht Verlust ✗</li>
                                </ul>
                            </div>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Window action for project analytics -->
    <record id="action_project_analytics_report" model="ir.actions.act_window">
        <field name="name">Projektstatistik</field>
        <field name="res_model">project.project</field>
        <field name="view_mode">list,pivot,graph,form</field>
        <field name="view_ids" eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('view_project_list_account_analytics')}),
            (0, 0, {'view_mode': 'pivot', 'view_id': ref('view_project_pivot_account_analytics')}),
            (0, 0, {'view_mode': 'graph', 'view_id': ref('view_project_graph_account_analytics')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_project_form_account_analytics')})
        ]"/>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Keine Projekte gefunden</p>
            <p>Diese Ansicht zeigt alle Projekte für Analyse- und Berichtszwecke mit detaillierter Kunden- und Lieferantenverfolgung.</p>
            <p><strong>NETTO vs. BRUTTO:</strong></p>
            <ul>
                <li><strong>NETTO-Beträge:</strong> Hauptbeträge für Gewinnberechnung (ohne MwSt.)</li>
                <li><strong>BRUTTO-Beträge (dunkelgrau):</strong> Gesamtbeträge für Cashflow-Analyse (mit MwSt.)</li>
            </ul>
        </field>
    </record>

    <!-- Inherit standard project form to add analytics button -->
    <record id="view_project_form_inherit_analytics_button" model="ir.ui.view">
        <field name="name">project.project.form.inherit.analytics.button</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_open_analytics_form"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-line-chart"
                        string="Finanzanalyse"
                        help="Zeigt detaillierte Finanzanalyse mit NETTO/BRUTTO-Vergleich"
                        groups="project.group_project_user"/>
            </xpath>
        </field>
    </record>

    <!-- Add menu item in Accounting or Project menu -->
    <menuitem id="menu_project_analytics_accounting"
              name="Projektstatistik"
              parent="account.menu_finance_reports"
              action="action_project_analytics_report"
              sequence="50"
              groups="account.group_account_readonly"/>

    <menuitem id="menu_project_analytics_project"
              name="Finanzanalyse"
              parent="project.menu_project_report"
              action="action_project_analytics_report"
              sequence="10"
              groups="project.group_project_user"/>
</odoo>
